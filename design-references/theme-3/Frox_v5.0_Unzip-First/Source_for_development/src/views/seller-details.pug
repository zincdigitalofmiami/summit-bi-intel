extends layout/layout

block vars
  - title = 'Seller Details Page'
  - bodyClass = 'seller-details-page'

block container
  +PageHeader('Seller Details')
  .flex.justify-between.flex-col.gap-y-2(class='mb-[28px] sm:flex-row')
    .flex.items-center.text-xs.text-gray-500(class='gap-x-[11px]')
      .flex.items-center.gap-x-1
        img(src='assets/images/icons/icon-home-2.svg', alt='home icon')
        span.capitalize home
      img(src='assets/images/icons/icon-arrow-right.svg', alt='arrow right icon')
      span.capitalize.text-color-brands Seller Details
    .flex.items-center.gap-x-2 
      img(src='assets/images/icons/icon-calendar-1.svg', alt='calendar icon')
      time.text-xs.text-gray-500 Feb 15, 2022 - Feb 21, 2022
  .flex.gap-6.flex-col(class='lg:flex-row')
    aside.bg-neutral-bg.border.border-neutral.p-6.text-center.rounded-lg.w-full(
      class='dark:bg-dark-neutral-bg dark:border-dark-neutral-border lg:max-w-[299px]'
    )
      img.block.mb-2.mx-auto(src='assets/images/seller-details-1.png', alt='seller details 1')
      +Size14Leading16Semibold("FoxMedia.,JSC").mb-2
      p.text-xs.text-gray-500.mb-6(class='dark:text-gray-dark-500') Since 2012
      table.w-full.ml-3.mb-2 
        +TableRowSellerDetails("Owner Name", "Jonhson Mark")
        +TableRowSellerDetails("Company Type", "Partnership")
        +TableRowSellerDetails("Email", "foxmedia@gmal.co")
        +TableRowSellerDetails("Website", "foxmedia.com.uk")
        +TableRowSellerDetails("Contact No.", "(+18) 985 45632")
        +TableRowSellerDetails("Fax", "(+18) 985 45648")
        +TableRowSellerDetails("Location", "United Kingdom")
        +TableRowSellerDetails("Joined", "18 January 2012")
      p.text-xs.text-black.font-semibold.pt-6.border-t.border-dashed.border-gray-300.text-left.capitalize(
        class='mb-[18px] dark:border-gray-dark-300 dark:text-white'
      ) Customer Reviews
      .flex.items-center.gap-x-10.bg-neutral.rounded-lg(
        class='dark:bg-dark-neutral-border pt-[17px] pr-[17px] pb-[14px] pl-[19px] mb-[19px]'
      )
        +RatingStar(5)
        span.text-xs.text-gray-500(class='dark:text-gray-dark-500') ( 12k rates )
      p.text-xs.text-gray-1100.text-left(class='dark:text-gray-dark-1100 mb-[18px]') Total 12k reviews
      .flex.items-center.flex-col.pb-6.mb-6.border-dashed.border-b.border-gray-300(
        class='gap-y-[5px] dark:border-gray-dark-300'
      )
        +ProgressBar("5 star", 50, "color-brands")
        +ProgressBar("4 star", 40, "green")
        +ProgressBar("3 star", 30, "pink")
        +ProgressBar("2 star", 20, "orange")
        +ProgressBar("1 star", 70, "red")
      .text-xs.font-semibold.text-black.text-left(class='mb-[22px] dark:text-white') Contact this seller
      +InputText("Subject")(class='mb-[14px]')
      textarea.textarea.w-full.text-gray-400.resize-none.pt-1.bg-transparent.border.border-neutral(
        class='focus:outline-none dark:border-dark-neutral-border dark:bg-dark-neutral-bg dark:text-gray-dark-400 min-h-[125px] rounded-[7px] p-[10px] mb-[14px]',
        placeholder='Message'
      )
      +Button('Send message', "S", 'solid', disabledType).block.border-neutral-bg.float-right(
        class='py-[11px] px-[15px] dark:border-dark-neutral-bg'
      )
    .flex-1
      .border.bg-neutral-bg.rounded-2xl.border-neutral(
        class='p-[23px] pt-[20px] dark:bg-dark-neutral-bg dark:border-dark-neutral-border mb-[30px]'
      )
        .flex.justify-between.mb-6
          +Size16Leading20Semibold("Revenue")
          .flex.items-center.gap-x-1
            +ButtonBase("Day").text-color-brands.font-normal(
              class='rounded-[3px] bg-[#7364db1a] hover:bg-[#7364db1a] p-[5px] text-[10px]'
            )
            +ButtonBase("Day").bg-neutral.text-gray-500.font-normal(
              class='rounded-[3px] dark:text-gray-dark-500 hover:bg-neutral dark:hover:bg-dark-neutral-border dark:bg-dark-neutral-border p-[5px] text-[10px]'
            )
            +ButtonBase("Month").bg-neutral.text-gray-500.font-normal(
              class='rounded-[3px] dark:text-gray-dark-500 hover:bg-neutral dark:hover:bg-dark-neutral-border dark:bg-dark-neutral-border p-[5px] text-[10px]'
            )
            +ButtonBase("Year").bg-neutral.text-gray-500.font-normal(
              class='rounded-[3px] dark:text-gray-dark-500 hover:bg-neutral dark:hover:bg-dark-neutral-border dark:bg-dark-neutral-border p-[5px] text-[10px]'
            )
        .grid.grid-cols-1.gap-3(class='mb-[35px] sm:grid-cols-3 xl:flex xl:justify-between') 
          +ButtonRevenue("#50d1b233", "#2B9B80", "1735", "Orders")
          +ButtonRevenue("#2775ff33", "#2775FF", "$283k", "Earnings")
          +ButtonRevenue("#e2373833", "#E23738", "85k", "Transactions")
          +ButtonRevenue("#dd50d633", "#DD50D6", "365k", "Followers")
          +ButtonRevenue("#50d1b233", "#2B9B80", "125", "Refunds")
          +ButtonRevenue("#2775ff33", "#2775FF", "98%", "Conversation")
          +ButtonRevenue("#fb7bb833", "#FB7BB8", "37.85", "Rating")
        //- img(src="assets/images/chart-seller-details.png", alt="chart").block.mx-auto(class="mb-[23px]")
        +Chart('seller','max-h-[350px]')
      .border.p-6.bg-neutral-bg.rounded-2xl.border-neutral.pb-0.overflow-x-scroll.scrollbar-hide(
        class='dark:bg-dark-neutral-bg dark:border-dark-neutral-border mb-[30px] xl:overflow-x-hidden'
      )
        +Size16Leading20Semibold("Products").mb-6
        table.w-full(class='min-w-[760px]')
          tr
            +TableHeaderSellerDetails('Image')
            +TableHeaderSellerDetails('Name')
            +TableHeaderSellerDetails('Color')
            +TableHeaderSellerDetails('Sales')
            +TableHeaderSellerDetails('Available')
            +TableHeaderSellerDetails('Price')
            th.border-b.border-neutral(class='dark:border-dark-neutral-border')
          tr 
            +TableCellSellerDetails
          tr
            +TableCellSellerDetails
          tr
            +TableCellSellerDetails(true)
      +PaginateNextBtn
