# Environment Variables Template for Summit BI Intel
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Google OAuth (for Analytics, Search Console, Ads, Business Profile)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Vercel Postgres (for market intelligence data)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NO_SSL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Vercel Blob (for file storage)
BLOB_READ_WRITE_TOKEN=

# Email/SMTP (for proposal notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Fusion <noreply@summitmarinedevelopment.com>

# WordPress Integration
WORDPRESS_API_URL=https://summitmarine.com/wp-json/wp/v2
WORDPRESS_API_USERNAME=
WORDPRESS_API_PASSWORD=

# Security
JWT_SECRET=your_super_secret_jwt_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
ADMIN_SEED_TOKEN=generate_a_strong_random_token

# External APIs
NOAA_API_USER_AGENT=Summit Marine Development Dashboard (contact@summitmarine.dev)

# Monitoring
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Feature Flags
ENABLE_MARKET_SCRAPING=true
ENABLE_AI_INSIGHTS=true
ENABLE_REAL_TIME_UPDATES=true
