mixin AvatarName(avatar, name,email)
  .flex.items-center.gap-2
    if email
      .w-12.h-12.rounded-full.overflow-hidden
        img(src=avatar, alt='user avatar')
      div
        p.text-desc.font-semibold.text-gray-1100(class='dark:text-gray-dark-1100')= name
        p.text-desc.text-gray-400(class='dark:text-gray-dark-400')= email
    else
      .w-6.h-6.rounded-full.overflow-hidden
        img(src=avatar, alt='user avatar')
      p.text-normal.text-gray-1100(class='dark:text-gray-dark-1100')= name

mixin PaymentMethod(img, name)
  .flex.items-center(class='gap-[5px]')
    img(src=img, alt='user avatar', class='max-w-[34px]')
    p.text-normal.text-gray-1100(class='dark:text-gray-dark-1100')= name

mixin AvatarNameSm(logo='assets/images/icons/icon-dribbble.svg', name='Vehement Capital Partners', desc='Invoice ID: #GSV567489239UI')
  .flex.items-center.flex-1(class='gap-[18px]')
