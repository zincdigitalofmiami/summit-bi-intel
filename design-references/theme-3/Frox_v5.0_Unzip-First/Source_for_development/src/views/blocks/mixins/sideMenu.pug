mixin SideCategoriesItem(title, bgColor, number)
  a.flex.items-center.justify-between.py-3.pl-6(href='#')
    span.text-gray-500.text-normal(class='dark:text-gray-dark-500')= title
    if bgColor
      +CategoryBadge(bgColor, number)

mixin SideMenuSecondItem(icon, alt, title)
  .flex.items-center.justify-between.cursor-pointer.rounded-xl.group(class='py-[17px] px-[21px] hover:bg-color-brands')
    .flex.items-center(class='gap-[10px]')
      .w-6.h-6.overflow-hidden
        img.filter-gray.w-full.h-full.object-cover(src=icon, alt=alt, class='group-hover:filter-white')
      span.text-normal.font-semibold.text-gray-500(class='dark:text-gray-dark-500 group-hover:text-white')= title
