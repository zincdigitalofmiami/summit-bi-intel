        +BaseWrapper.rounded-2xl(class='pt-[30px] pb-[35px] pr-[22px] pl-[26px]')
          .flex.items-center.justify-between.flex-col(class='gap-[18px] xl:flex-row')
            button.bg-neutral.flex.items-center.pr-5(
              class='rounded-[50px] dark:bg-dark-neutral-border gap-x-[10px] py-[11px] pl-[22px]'
            )
              img(src='assets/images/icons/icon-video-gradient.svg', alt='video icon')
              span.text-gray-1100.font-medium(class='dark:text-gray-dark-1100 text-[12px] leading-[9px]') Create Group Video
            .relative
              .grid.grid-cols-4.items-center.gap-4(class='lg:flex')
