mixin SearchBar
  .bg-gray-100.flex.rounded-xl.w-full.m-0(
    class='py-[14px] px-[18px] xl:w-[360px] dark:bg-gray-dark-100 lg:max-w-[250px] xl:max-w-[360px] lg:mr-[47px] lg:ml-6'
  )&attributes(attributes)
    img(src='assets/images/icons/icon-search-normal.svg', alt='seacrh icon')
    input.input.w-full.bg-transparent.outline-none.pl-2.h-5.text-gray-300(
      type='text',
      placeholder='Search',
      class='focus:!outline-none placeholder:text-gray-300 dark:placeholder:text-gray-dark-300 placeholder:font-semibold'
    )
    img(src='assets/images/icons/icon-microphone-2.svg', alt='microphone icon')
