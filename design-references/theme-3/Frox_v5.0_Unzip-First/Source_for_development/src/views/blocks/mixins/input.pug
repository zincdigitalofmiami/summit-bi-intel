mixin Checkbox
  input.checkbox.checkbox-primary.rounded.border-2(class='w-[18px] h-[18px]', type='checkbox')&attributes(attributes)

mixin CheckboxText(text)
  .flex.items-center(class='gap-x-[11px]')
    +Checkbox
    span.text-gray-500.leading-4(class='dark:text-gray-dark-500 text-[14px] max-w-[183px]')= text

mixin CheckboxText(text)
  .flex.items-center(class='gap-x-[11px]')
    +Checkbox
    span.text-gray-500.leading-4(class='dark:text-gray-dark-500 text-[14px] max-w-[183px]')= text

mixin Radio
  input.radio.radio-primary.border-2(type='radio')&attributes(attributes)

mixin RadioIconText(icon, alt, text)
  .flex.items-center(class='gap-x-[12px]')
    +Radio 
    .flex.items-center(class='gap-x-[7px]')
      img(src=icon, alt=alt)
      span.text-gray-500.leading-4(class='dark:text-gray-dark-500 text-[14px]')= text

mixin RadioIconText(icon, alt, text)
  .flex.items-center(class='gap-x-[12px]')
    +Radio 
    .flex.items-center(class='gap-x-[7px]')
      img(src=icon, alt=alt)
      span.text-gray-500.leading-4(class='dark:text-gray-dark-500 text-[14px]')= text

mixin InputText(placeholder)
  .input-group.border.rounded-lg(class='border-[#E8EDF2] dark:border-[#313442] sm:min-w-[252px]')&attributes(attributes)
    input.input.bg-transparent.text-sm.leading-4.text-gray-400.h-fit.min-h-fit.py-4(
      type='text',
      placeholder=placeholder,
      class='focus:outline-none pl-[13px] dark:text-gray-dark-400 placeholder:text-inherit'
    )

mixin InputSelect(text, mb='mb-12')
  select.select.w-full.border.rounded-lg.font-normal.text-sm.leading-4.text-gray-400.py-4.h-fit.min-h-fit(
    class='border-[#E8EDF2] dark:border-[#313442] focus:outline-none pl-[13px] min-w-[252px] dark:text-gray-dark-400',
    class=mb
  )&attributes(attributes)
    option(disabled='', selected='')= text
    option Homer
    option Marge
    option Bart

mixin Select(options=["Full time job", "Part-time job", "Hybrid", "Remote"], icon='select-arrow')
  select.select.text-gray-500.pl-1.font-normal.h-fit.min-h-fit(class='dark:text-gray-dark-500 focus:outline-0', class=icon)&attributes(attributes)
    each val in options
      option= val

mixin InputSelectUnique(text)
  select.select.w-full.border.font-normal.text-sm.leading-4.text-gray-400.py-4.h-fit.min-h-fit.mb-0(
    class='border-[#E8EDF2] dark:border-[#313442] focus:outline-none pl-[13px]dark:text-gray-dark-400 max-w-[225px] rounded-[5px]'
  )&attributes(attributes)
    option(disabled='', selected='')= text
    option Homer
    option Marge
    option Bart

mixin UploadImageInput
  .border-dashed.border-2.text-center.border-neutral.mx-auto.cursor-pointer(class='py-[26px] dark:border-dark-neutral-border')&attributes(attributes)
    img.mx-auto.inline-block(src='assets/images/icons/icon-image.svg', alt='image icon', class='mb-[15px]')
    p.text-sm.leading-6.text-gray-500.font-normal(class='mb-[5px]') Drop your image here, or browse
    p.leading-6.text-gray-400(class='text-[13px]') JPG,PNG and GIF files are allowed

mixin EditorInput(textHeight='h-[262px]', placeholderText='Content here')
  .rounded-lg.border.border-neutral.flex.flex-col(class='dark:border-dark-neutral-border p-[13px]', class=textHeight)&attributes(attributes)
    .flex.items-center.gap-y-4.flex-col(class='gap-x-[22px] mb-[31px] xl:flex-row xl:gap-y-0')
      .flex.items-center(class='gap-x-[14px]')
        img.cursor-pointer(src='assets/images/icons/icon-bold.svg', alt='bold icon')
        img.cursor-pointer(src='assets/images/icons/icon-italicized.svg', alt='italicized icon')
        img.cursor-pointer(src='assets/images/icons/icon-underlined.svg', alt='underlined icon')
        img.cursor-pointer(src='assets/images/icons/icon-strikethrough.svg', alt='strikethrough icon')
        img.cursor-pointer(src='assets/images/icons/icon-textcolor.svg', alt='textcolor icon')
        img.cursor-pointer(src='assets/images/icons/icon-backgroundcolor.svg', alt='backgroundcolor icon')
        img.cursor-pointer(src='assets/images/icons/icon-smile.svg', alt='smile icon')
      .flex.items-center(class='gap-x-[14px]')
        .flex.items-center.cursor-pointer(class='gap-x-[1.5px]')
          img(src='assets/images/icons/icon-paragraphformat.svg', alt='paragraphformat icon')
          img(src='assets/images/icons/icon-arrow-down-triangle.svg', alt='arrow down triangle icon')
        .flex.items-center.cursor-pointer(class='gap-x-[1.5px]')
          img(src='assets/images/icons/icon-align-left.svg', alt='align left icon')
          img(src='assets/images/icons/icon-arrow-down-triangle.svg', alt='arrow down triangle icon')
        .flex.items-center.cursor-pointer(class='gap-x-[1.5px]')
          img(src='assets/images/icons/icon-ordered-list.svg', alt='ordered list icon')
          img(src='assets/images/icons/icon-arrow-down-triangle.svg', alt='arrow down triangle icon')
        .flex.items-center.cursor-pointer(class='gap-x-[1.5px]')
          img(src='assets/images/icons/icon-unordered-list.svg', alt='unordered list icon')
          img(src='assets/images/icons/icon-arrow-down-triangle.svg', alt='arrow down triangle icon')
        img.cursor-pointer(src='assets/images/icons/icon-indent.svg', alt='indent icon')
        img.cursor-pointer.opacity-40(src='assets/images/icons/icon-indent.svg', alt='outdent icon')
      .flex.items-center(class='gap-x-[14px]')
        img.cursor-pointer(src='assets/images/icons/icon-insert-image.svg', alt='insert image icon')
        img.cursor-pointer(src='assets/images/icons/icon-insert-link.svg', alt='insert link icon')
        img.cursor-pointer(src='assets/images/icons/icon-insert-file.svg', alt='insert-file icon')
        img.cursor-pointer(src='assets/images/icons/icon-insert-video.svg', alt='insert video icon')
        img.cursor-pointer.opacity-40(src='assets/images/icons/icon-undo.svg', alt='undo icon')
        img.cursor-pointer.opacity-40(src='assets/images/icons/icon-redo.svg', alt='redo icon')
    textarea.textarea.w-full.p-0.text-gray-400.resize-none.rounded-none.bg-transparent.flex-1(
      class='focus:outline-none dark:text-gray-dark-400 placeholder:text-inherit',
      placeholder=placeholderText
    )
