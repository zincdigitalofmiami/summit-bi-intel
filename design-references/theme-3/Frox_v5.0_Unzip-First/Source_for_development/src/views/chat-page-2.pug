extends layout/layout

block vars
  - title = 'Chat 2 Page'
  - bodyClass = 'chat-2-page'

block container
  section
    .flex.flex-col(class='gap-[22px] xl:flex-row')
      +BaseWrapper.rounded-2xl.px-6.pb-5(class='pt-[15px]')
        .flex.justify-between.items-center.border-b.border-neutral.pb-1(class='dark:border-dark-neutral-border mb-[11px]') 
          span.text-sm.text-gray-1100(class='dark:text-gray-dark-1100') 36 Messages
          +Select(['Newest', 'Newest01', 'Newest02', 'Newest03'])
        .flex.justify-between.items-center.gap-5.flex-row-reverse(class='mb-[7px] lg:flex-row')
          form.flex.flex-1.items-center.border.border-neutral.w-full.order-last(
            action='#',
            class='gap-[10px] py-[13px] rounded-[10px] dark:border-dark-neutral-border lg:w-[279px] pl-[18px] lg:order-first'
          )
            button(type='submit')
              img(src='assets/images/icons/icon-search-normal.svg', alt='search icon')
            input.w-full.outline-none.border-none.text-xs.font-normal.bg-transparent.text-gray-400(
              type='search',
              placeholder='people, groups, messages...',
              class='dark:text-gray-dark-400'
            )
          button.overflow-hidden(class='w-[42px] h-[42px]') 
            img.w-full.h-full.object-cover(src='assets/images/icons/icon-filter-2.svg', alt='filter icon', class='dark:hidden')
            img.w-full.h-full.object-cover.hidden(
              src='assets/images/icons/icon-filter-2-black.svg',
              alt='filter icon',
              class='dark:block'
            )
        .flex.flex-col.gap-y-2
