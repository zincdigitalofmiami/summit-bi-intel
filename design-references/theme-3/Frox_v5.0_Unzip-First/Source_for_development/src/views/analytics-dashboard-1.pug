            +ActiveMemberItem('assets/images/cms-avt-9.png', 90, 'pink', 45, '5.9 kpi')
        .grid.grid-cols-2(class='gap-x-[25px] gap-y-[22px]')
          +JobDashboardChartItem("assets/images/icons/icon-bag-happy.svg", "bag happy icon", "green", "assets/images/chart-mini.png", "126.500", "Bitcoin (BTC)", "34.7%",'income')
