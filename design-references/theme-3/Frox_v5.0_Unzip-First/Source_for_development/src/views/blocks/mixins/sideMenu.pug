mixin SideMenuItem(icon, title, id, child)
  .sidemenu-item.rounded-xl.relative
    input.sr-only.peer(type='checkbox', value=id, name='sidemenu', id=id)
    label.flex.items-center.justify-between.w-full.cursor-pointer&attributes(attributes)(
      class='py-[17px] px-[21px] focus:outline-none peer-checked:border-transparent',
      for=id
    )
      .flex.items-center(class='gap-[10px]')
        img(src=icon, alt='side menu icon')
        span.text-normal.font-semibold.text-gray-500.sidemenu-title(class='dark:text-gray-dark-500')= title
    img.absolute.right-2.transition-all.duration-150.caret-icon.pointer-events-none(
      src='assets/images/icons/icon-arrow-down.svg',
      alt='caret icon',
      class='peer-checked:rotate-180 top-[22px]'
    )
    +ChildMenuItem(child)

mixin ChildMenuItem(childList=[    {link: 'index.html', title: 'Ecommerce'},    {link: 'finance-dashboard.html', title: 'Finance'},    {link: 'jobs-dashboard.html', title: 'Jobs'},    {link: 'cms-dashboard.html', title: 'CMS'},    {link: 'crm-dashboard.html', title: 'CRM'},    {link: 'analytics-dashboard-1.html', title: 'Analytics'},    {link: 'project-dashboard.html', title: 'Project Manage'},    {link: 'chat-page-1.html', title: 'Chat / Message'},    {link: 'social-feed-1.html', title: 'Social Network'},    {link: 'crypto-dashboard.html', title: 'Crypto'},    {link: 'mailbox-inbox.html', title: 'Mailbox'},    {link: 'file-manage-dashboard.html', title: 'File Manage'},    {link: 'help-center-dashboard.html', title: 'Help Center'},    {link: 'course-dashboard.html', title: 'Course Online'}  ])
  .hidden(class='peer-checked:block')
    ul.text-gray-300.child-menu.z-10(class='pl-[53px]')
      each val in childList
        if val.link
          li.pb-2.transition-opacity.duration-150(class='hover:opacity-75', class=val.className)
            a.text-normal(href=val.link, id=val.id || null)= val.title

