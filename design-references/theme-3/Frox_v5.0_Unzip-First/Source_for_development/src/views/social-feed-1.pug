              img(src='assets/images/seller-avatar-1.png', alt='avatar')
            input.flex-1.text-gray-400.text-xs.bg-neutral.rounded-lg(
              type='text',
              placeholder='What are you thinking ?',
              class='dark:text-gray-dark-400 dark:bg-dark-neutral-border py-[13px] px-[18px] focus:outline-none'
            )
          .flex.items-center.justify-between
            .flex.items-center.gap-9.flex-wrap
              .flex.items-center(class='gap-x-[9px]')
                img(src='assets/images/icons/icon-video-camera-boxy.svg', alt='video camera icon')
                span.text-gray-400.text-xs(class='dark:text-gray-dark-400') Live Video
              .flex.items-center(class='gap-x-[9px]')
                img(src='assets/images/icons/icon-picture-boxy.svg', alt='picture icon')
                span.text-gray-400.text-xs(class='dark:text-gray-dark-400') Photo/Video
              .flex.items-center(class='gap-x-[9px]')
                img(src='assets/images/icons/icon-smile-boxy.svg', alt='smile icon')
