                +UserActiveMaxItem('assets/images/seller-avatar-2.png', true, activeColor, false, 50, 13, false, false)
              .absolute(class='top-1/2 translate-y-[-50%] right-[-28px] lg:right-[-10px]')
                button.border-neutral.rounded-full.flex.items-center.justify-center.bg-white.my-auto(
                  class='w-[25px] h-[25px] dark:border-dark-neutral-border border-[1.5625px]'
                )
