          +JobDashboardChartItem("assets/images/icons/icon-share.svg", "share icon", "sky", "assets/images/chart-mini.png", "126.500", "Binance Coin (BNB)", "34.7%",'sky')
        +UpgradeCard.mx-auto(class='xl:mx-0')
      .flex.flex-col.justify-between.gap-6(class='xl:flex-row')
        +BaseWrapper.rounded-2xl.pb-8.pl-6.flex-1(class='pt-[15px] pr-[22px]')
          +TitleToggle(15, 25, 'Visits by Source')
          .flex.flex-col.gap-y-3.mb-9
