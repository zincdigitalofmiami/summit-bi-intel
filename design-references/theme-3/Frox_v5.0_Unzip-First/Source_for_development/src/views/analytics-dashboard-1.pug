extends layout/layout

block vars
  - title = 'Analytics Dashboard 1 Page'
  - bodyClass = 'analytics-dashboard-1-page'

block container
  +BreadcrumbUnoriginal('Howdy Steven!', 'Check out latest updates', 'Feb 15, 2022 - Feb 21, 2022', 43)
  section
    .flex.flex-col.gap-y-6 
      .flex.flex-col.justify-between.gap-6(class='xl:flex-row')
        +BaseWrapper.rounded-2xl.px-6.flex-1(class='pt-[15px] pb-[34px]')
          +TitleToggle(15, 24, 'Top countries')
          //- img(src='assets/images/map-world.png', alt='map world')
          canvas#canvas
        +BaseWrapper.rounded-2xl(class='pt-[15px] pb-[31px] pl-[30px] pr-[27px] xl:w-[35%]')
          +TitleToggle(15, 34, 'Popular browser')
          div(class='mb-[43px]')
            +Chart('bar', 'max-h-[256px]')
          +ButtonBase('View All Reports').w-full.bg-neutral.text-gray-500(
            class='dark:text-gray-dark-500 dark:bg-dark-neutral-border rounded-[10px] py-[15px] hover:bg-neutral dark:hover:bg-dark-neutral-border'
          )
      .flex.justify-between.gap-6.flex-col(class='xl:flex-row')
        +BaseWrapper.rounded-2xl.pb-8.px-6.flex-1(class='pt-[15px]')
          +TitleToggle(15, 24, 'Active members')
          .flex.flex-col(class='gap-y-[15px]')
            +ActiveMemberItem('assets/images/avatar-layouts-5.png', 100, 'color-brands', 50, '9.5 kpi')
            +ActiveMemberItem('assets/images/cus-dashboard-8.png', 80, 'orange', 40, '8.3 kpi')
