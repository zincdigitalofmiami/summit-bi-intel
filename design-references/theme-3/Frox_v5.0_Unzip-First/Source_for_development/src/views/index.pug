    +Card.flex-1(class='p-[25px]')
      +CardHeaderWithToggle('Total Revenue').pb-3.border-neutral.border-b.mb-5(
        class='dark:border-dark-neutral-border'
      )
      div
        +Chart('revenue', 'max-h-[240px] lg:max-h-[123px] xl:max-h-[200px]')
